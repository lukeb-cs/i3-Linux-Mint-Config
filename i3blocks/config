separator_block_width=15
markup=pango
color=#f8f8f2  # foreground color

[cpu_usage]
command=~/.config/i3blocks/cpu_usage
interval=5
align=right
color=#8be9fd
min_width=CPU:100%

[gpu_usage]
command=~/.config/i3blocks/gpu_usage
interval=5
align=right
color=#8be9fd
min_width=GPU:100%

[volume]
command=~/.config/i3blocks/volume.py
interval=1
signal=1

[battery]
command=~/.config/i3blocks/battery
interval=30
align=right

[time]
command=date '+  %B %d, %Y  %l:%M %p  '
interval=1
align=center
color=#f8f8f2

[power]
command=~/.config/i3blocks/power_button
interval=once
signal=1
